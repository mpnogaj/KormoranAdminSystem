<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:KormoranMobile.Maui.ViewModels"
             xmlns:models="clr-namespace:KormoranShared.Models"
             x:Class="KormoranMobile.Maui.MatchesPage"
             x:DataType="viewmodels:MatchesPageViewModel"
             Title="Mecze">
    <StackLayout Orientation="Vertical"
                 VerticalOptions="StartAndExpand">
        <Label Text="{Binding Tournament.Name}"
               HorizontalOptions="Center" />
        <ListView ItemsSource="{Binding Tournament.Matches}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Match">
                    <TextCell Detail="{Binding State.Name}">
                        <TextCell.Text>
                            <MultiBinding StringFormat="{}{0} - {1} | {2}:{3}">
                                <Binding Path="Team1.Name"/>
                                <Binding Path="Team2.Name"/>
                                <Binding Path="Team1Score"/>
                                <Binding Path="Team2Score"/>
                            </MultiBinding>
                        </TextCell.Text>
                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
