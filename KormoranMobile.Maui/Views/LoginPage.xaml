<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:KormoranMobile.Maui.ViewModels"
             xmlns:properties="clr-namespace:KormoranMobile.Maui.Properties"
             x:Class="KormoranMobile.Maui.Views.LoginPage"
             x:DataType="viewmodels:LoginPageViewModel">
    <ContentPage.Content>
        <StackLayout Spacing="3" Margin="10"
                     VerticalOptions="Center">
            <StackLayout Spacing="2">
                <Label Text="Nazwa użytkownika" />
                <Entry Text="{Binding Login}"
                   Placeholder="mnogaj" />
            </StackLayout>

            <StackLayout Spacing="2">
                <Label Text="Hasło" />
                <Entry Text="{Binding Password}"
                       IsPassword="True"
                       Placeholder="admin123" />
            </StackLayout>

            <StackLayout Spacing="10"
                         HorizontalOptions="Center"
                         Orientation="Horizontal">
                <Button Text="Zaloguj jako gość" />
                <Button Text="Zaloguj" Command="{Binding LoginCommand}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
