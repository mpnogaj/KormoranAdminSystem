<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:viewmodels="clr-namespace:KormoranMobile.Maui.ViewModels"
			 xmlns:properties="clr-namespace:KormoranMobile.Maui.Properties"
			 x:Class="KormoranMobile.Maui.Views.LoginPage"
			 x:DataType="viewmodels:LoginPageViewModel"
			 Title="{x:Static properties:Resources.login}">
	<Shell.BackButtonBehavior>
		<BackButtonBehavior Command="{Binding GoBackCommand}" />
	</Shell.BackButtonBehavior>
	
	<ContentPage.Content>
		<StackLayout Spacing="3" Margin="10"
					 VerticalOptions="Center">
			
			<StackLayout Spacing="2">
				<Label Text="{x:Static properties:Resources.username}" />
				<Entry Text="{Binding Login}"
					   Placeholder="{x:Static properties:Resources.loginPlaceholder}" />
			</StackLayout>

			<StackLayout Spacing="2">
				<Label Text="{x:Static properties:Resources.password}" />
				<Entry Text="{Binding Password}"
					   IsPassword="{OnPlatform Default=True, WinUI=False}"
					   Placeholder="{x:Static properties:Resources.passwordPlaceholder}" />
			</StackLayout>

			<Button Text="{x:Static properties:Resources.login}" 
					Command="{Binding LoginCommand}" 
					HorizontalOptions="Center"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
