<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			   xmlns:viewmodels="clr-namespace:KormoranMobile.Maui.ViewModels"
			   xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
			   x:Class="KormoranMobile.Maui.Views.EditScoresPage"
			   x:DataType="viewmodels:EditScoresPageViewModel"
			   CanBeDismissedByTappingOutsideOfPopup="False">
	<StackLayout BackgroundColor="{StaticResource DarkDarkGray}">
		<Label VerticalOptions="Center"
			   HorizontalOptions="Center">
			<Label.Text>
				<MultiBinding StringFormat="{}{0} - {1}">
					<Binding Path="Match.Team1.Name"/>
					<Binding Path="Match.Team2.Name"/>
				</MultiBinding>
			</Label.Text>
		</Label>
	</StackLayout>
</toolkit:Popup>
