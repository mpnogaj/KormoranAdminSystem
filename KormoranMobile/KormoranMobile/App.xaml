<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KormoranMobile.App">
    <Application.Resources>
        <Style x:Key="Icons" TargetType="Label">
            <Setter Property="FontFamily" Value="KormoranFont" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="WidthRequest" Value="40" />
        </Style>

        <Style x:Key="SettingsIcon" BasedOn="{StaticResource Icons}" TargetType="Label">
            <Setter Property="Text" Value="&#xe800;" />
        </Style>
    </Application.Resources>
</Application>