<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:KormoranMobile.ViewModels"
             x:Class="KormoranMobile.Views.SettingsPage">
    <ContentPage.BindingContext>
        <viewmodels:SettingsPageViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Spacing="3" Margin="2">
            <Label Text="Adres serwera"
                   Style="{DynamicResource TitleStyle}" />
            <Entry Text="{Binding ServerAddress}" />
            <Button Command="{Binding SaveSettings}" Text="Zapisz" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>